<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.iebbuda.mozi.domain.scrab.mapper.PolicyScrabMapper">

    <!-- ✅ 정책 스크랩 등록 -->
    <insert id="insertScrab" parameterType="org.iebbuda.mozi.domain.scrab.domain.PolicyScrabVO">
        INSERT INTO UserPolicyScrap (user_id, policy_id)
        VALUES (#{userId}, #{policyId})
    </insert>

    <!-- ✅ 정책 스크랩 취소 -->
    <delete id="deleteScrab">
        DELETE FROM UserPolicyScrap
        WHERE user_id = #{userId} AND policy_id = #{policyId}
    </delete>

    <!-- ✅ 스크랩 여부 확인 -->
    <select id="existsScrab" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM UserPolicyScrap
        WHERE user_id = #{userId} AND policy_id = #{policyId}
    </select>

    <!-- ✅ 특정 사용자가 스크랩한 정책 ID 목록 -->
    <select id="getScrabPolicyIds" resultType="int">
        SELECT policy_id
        FROM UserPolicyScrap
        WHERE user_id = #{userId}
    </select>

</mapper>
