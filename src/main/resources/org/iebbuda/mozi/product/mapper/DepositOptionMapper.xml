<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.iebbuda.mozi.product.mapper.DepositOptionMapper">

    <!-- 특정 상품의 옵션 목록 조회 -->
    <select id="findByProductId" parameterType="long"
            resultType="org.iebbuda.mozi.product.domain.DepositOption">
        SELECT * FROM deposit_option
        WHERE deposit_id = #{depositId}
    </select>

</mapper>